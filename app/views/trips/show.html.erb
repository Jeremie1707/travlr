
<div class="d-flex justify-content-start">
  <div class="ml-3">
    <h1 class="mb-0"><%= @trip.description %></h1>
    <p><%= @trip.description %></p>
  </div>
  <div class="d-flex mt-2 ml-2" id="date">
    <p><%= @trip.start_date %> </p>
    <p> &nbsp; to &nbsp; </p>
    <p><%= @trip.end_date %></p>
  </div>
  <div id="avatars" class="ml-3 m-2">
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar" %>
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar" %>
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar" %>
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar" %>
  </div>
</div>

<div class="buttonContainer">
  <a  href="#" class="tab-button" data-tab-index="0" data-color="#f44336">
    <span class="d-flex justify-content-around"><i class="far fa-lightbulb"></i>Trip suggestions</span></a>
    <a href="#" class="tab-button" data-tab-index="1" data-color="#f44336"><span class="d-flex justify-content-around"><i class="far fa-lightbulb"></i>Trip suggestions</span></a></a>
    <a href="#" class="tab-button" data-tab-index="2" data-color="#f44336"><span class="d-flex justify-content-around"><i class="far fa-lightbulb"></i>Trip suggestions</span></a></a>
    <a href="#" class="tab-button" data-tab-index="3" data-color="#f44336"><span class="d-flex justify-content-around"><i class="far fa-lightbulb"></i>Trip suggestions</span></a></a>
  </div>

  <div class="tabPanel">
    <div class="row">
      <div class="col-5">
        <%= render partial: "partial/suggestions_list" %>
    </div>
    <div class="tabPanel">tab 2</div>
    <div class="tabPanel">
      <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>
    <div class="tabPanel">tab 4</div>
    <% @trip.trip_items.each do |element| %>
    <%= render partial: "partial/trip-item", locals: { element: element } %>
    <% end %>

