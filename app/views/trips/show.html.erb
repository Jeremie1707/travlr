
<div class="d-flex justify-content-start">
  <div class="ml-3">
    <h1 class="mb-0"><%= @trip.description %></h1>
    <p><%= @trip.description %></p>
  </div>
  <div class="d-flex mt-2 ml-2" id="date">
    <p><%= @trip.start_date %> </p>
    <p> &nbsp; to &nbsp; </p>
    <p><%= @trip.end_date %></p>
  </div>
  <div id="avatars" class="ml-3 m-2">
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar" %>
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar" %>
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar" %>
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar" %>
  </div>
</div>

<div class="buttonContainer page-tab-bar">
  <a  href="#" class="tab-button tab-button-trip-suggestions" data-tab-index="0" data-color="#f44336">
    <span class="d-flex justify-content-around"><i class="far fa-lightbulb"></i>Trip suggestions</span>
  </a>
    <a href="#" class="tab-button tab-button-route" data-tab-index="1" data-color="#f44336">
      <span class="d-flex justify-content-around"><i class="fas fa-route"></i>Your Route</span>
    </a>
    <a href="#" class="tab-button tab-button-map" data-tab-index="2" data-color="#f44336">
      <span class="d-flex justify-content-around"><i class="fas fa-globe-europe"></i>Map</span>
    </a>
    <a href="#" class="tab-button tab-button-calendar" data-tab-index="3" data-color="#f44336">
      <span class="d-flex justify-content-around"><i class="far fa-calendar-alt"></i>Calandar</span>
    </a>
  </div>
  <div class="tab-pane fade" id="map" role="tabpanel" aria-labelledby="map-tab">
    <div class="container pt-5">
    </div>
  </div>


  <div class="tabPanel">                        <!-- 2.section -->
    <div class="row">
      <div class="col-5">
        <!-- LIST FOR "Your Trip" -->
        <p>list</p>


      </div>
      <div class="col-5">
        <p>map</p>


      </div>
    </div>
  </div>


  <div class="tabPanel">                         <!-- 3.section -->
    <!-- FULSCREEN MAP SECTION -->
    <h2>Map Section</h2>
  </div>

