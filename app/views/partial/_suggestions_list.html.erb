<div class="detail-item-container">
  <div class="container">
    <div class="suggestions-first-card">
      <button type="button" class="btn add-item" data-toggle="modal" data-target="#trip-item-form">
        <p class="pt-3 pl-5 add-item"><i class="fas fa-plus-circle"></i> &nbsp;Add a trip suggestion</p>
      </button>
    </div>
    <% @trip.trip_items.each do |element| %>
    <div class="suggestions-item-card d-flex">
      <div class="suggestions item-card-image">
        <a id="card-image-<%= element.id %>" href="#" data-toggle="modal" data-target="#card-trip-item-<%=element.id%>">
          <%= cl_image_tag element.photo %>
        </a>
      </div>
      <div class="suggestions-card-information d-flex">
        <div class="suggestions-card-information-text">
          <h6><%= element.name %></h6>
          <p><%= element.start_date %></p>
        </div>
        <div class="comment">
          <div class="d-flex card-info-icons" >
            <div class="suggestions-item-card-information-icons-avatar">
              <%= cl_image_tag element.user.photo, class: "avatar-suggestion-item-card" %>
            </div>
            <div>
              <% if element.category.name =="activity"  %>
              <i class="fas fa-hiking"></i>
              <% elsif element.category.name == "transport"  %>
              <i class="fas fa-bus"></i>
              <% elsif element.category.name == "housing"  %>
              <i class="fas fa-home"></i>
              <% end %>
            </div>
            <div class="comments">
              <i class="fas fa-comment"></i>
              <p class="comments-counter"><%=element.comments.count%></p>
            </div>
            <div class="likes">
              <i class="fas fa-heart"></i>
              <p class="likes-counter"><%=element.likes.count%></p>
            </div>
          </div>
        </div>

      </div>
    </div>
    <% end %>
  </div>
</div>
















